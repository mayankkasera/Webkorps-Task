<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.add.AddFragment">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_Main"
            android:src="@drawable/background"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/edit_round_12"
            app:layout_constraintRight_toRightOf="@+id/iv_Main"
            app:layout_constraintBottom_toBottomOf="@+id/iv_Main"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/ic_edit"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:textColorHint="@color/gray"
            android:hint="Enter Name"
            android:textColor="@color/colorPrimary"
            android:id="@+id/et_Name"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintTop_toBottomOf="@+id/iv_Main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/gray"
            android:hint="Enter Email"
            android:id="@+id/et_Email"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <EditText
            android:textColorHint="@color/gray"
            android:hint="Select Dob"
            android:id="@+id/et_Dob"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Save"
            android:background="@color/colorPrimary"
            android:id="@+id/bt_Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_Dob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>